{
   "name": "YouTube Playlist Duration",
   "description": "View the duration of YouTube Playlists",
   "author": "Abhay Gupta",
   "version": "1.0.1",
   "manifest_version": 2,
   "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
   },
   "content_scripts": [ {
      "js": [ "app.js" ],
      "matches": [ "https://www.youtube.com/playlist?list=*" ],
      "run_at": "document_end"
   } ],
   "homepage_url": "https://github.com/abhaygupta08/Youtube-Playlist-Duration"
}
